/* 1. 基础变量与容器 */
page {
  background-color: #1e1e1e; /* 全局深色背景 */
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx; /* 底部留白 */
}

/* 2. 未登录空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 90vh;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 60rpx;
}

.btn-primary {
  background-color: #de9b35; /* CS 橙色 */
  color: #fff;
  font-weight: bold;
  border-radius: 8rpx;
  padding: 0 60rpx;
  font-size: 30rpx;
}

/* 3. 已登录 - 头部卡片 */
.dashboard {
  padding: 30rpx;
}

.profile-card {
  background: linear-gradient(135deg, #2b2d31 0%, #232529 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
}

.profile-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx; /* 方形圆角更像游戏风格 */
  margin-right: 30rpx;
  border: 2rpx solid #de9b35;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}

.level-badge {
  background: #333;
  color: #de9b35;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-top: 10rpx;
  display: inline-block;
  border: 1rpx solid #de9b35;
}

/* 4. 核心数据网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.stat-box {
  width: 48%; /* 两列布局 */
  background-color: #2b2d31;
  padding: 30rpx;
  box-sizing: border-box; /* 防止padding撑大盒子 */
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #8b8b8b;
  margin-bottom: 10rpx;
  text-transform: uppercase;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800; /* 特粗字体 */
}

/* 金色高亮样式 */
.gold {
  color: #de9b35;
  text-shadow: 0 0 10rpx rgba(222, 155, 53, 0.3);
}

/* 5. 图表占位 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #de9b35;
}

.chart-container {
  background-color: #2b2d31;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #444;
}

.placeholder-text {
  color: #666;
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 6. 比赛列表 */
.match-item {
  background-color: #2b2d31;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.match-left {
  display: flex;
  flex-direction: column;
}

.map-tag {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
}

.match-result {
  font-size: 22rpx;
  font-weight: bold;
  margin-top: 6rpx;
}

.win { color: #5d79ae; } /* CT Blue */
.lose { color: #eb4b4b; } /* T Red/Pink */

.match-center {
  text-align: center;
}

.score {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.date {
  font-size: 20rpx;
  color: #666;
  display: block;
}

.match-right {
  text-align: right;
  min-width: 80rpx;
}

.mini-label {
  font-size: 18rpx;
  color: #666;
  display: block;
}

.mini-rating {
  font-size: 32rpx;
  font-weight: bold;
}
/* pages/rank/rank.wxss */
page {
    background-color: #1e1e1e;
    color: #fff;
}

.container {
    padding-bottom: 40rpx;
}

/* 工具栏 */
.toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    background: transparent;
    position: sticky;
    top: 0;
    z-index: 10;
}

.toolbar-header {
  display: flex;
  justify-content: space-between; /* 关键：左右撑开 */
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: transparent; /* 或者你的背景色 */
  position: sticky;
  top: 0;
  z-index: 99; /* 保证吸顶 */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); /* 微微的阴影 */
}

.date-picker-wrap {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #444444;
  border-radius: 12rpx;
}
.date-text {
  font-size: 28rpx;
  font-weight: bold;
  color: hsl(0, 0%, 100%);
}
.picker-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

.arrow {
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #888;
}

.tips {
    font-size: 22rpx;
    color: #666;
}

/* 3. 右侧胶囊开关容器 */
.subscribe-capsule {
  display: flex;
  align-items: center;
}
.sub-label {
  font-size: 24rpx;
  color: #888;
  margin-right: 12rpx;
}

/* 4. 纯CSS实现的 iOS 风格开关 */
.toggle-switch {
  width: 88rpx;
  height: 52rpx;
  background-color: #e9e9eb; /* 默认灰色 */
  border-radius: 26rpx; /* 圆角是高度的一半 */
  position: relative;
  transition: background-color 0.3s ease;
}

/* 激活状态：变成绿色 */
.toggle-switch.active {
  background-color: #34c759; /* Apple Green */
}

/* 开关上的白色小圆球 */
.toggle-knob {
  width: 44rpx;
  height: 44rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  transition: transform 0.3s cubic-bezier(0.3, 1.05, 0.4, 1.05); /* 增加一点回弹质感 */
}

/* 激活时：小圆球向右移动 */
.toggle-switch.active .toggle-knob {
  transform: translateX(36rpx); /* 移动距离 = 宽度 - 圆球宽 - 边距*2 */
}

/* 表头 */
.list-header {
    display: flex;
    padding: 20rpx 30rpx;
    width: 100%;
    font-size: 24rpx;
    color: #666;
    border-bottom: 1px solid #333;
}

.th-rank {
    width: 15%;
    text-align: center;
}

.th-player {
    width: 45%;
}

.th-data {
    flex: 1;
    text-align: right;
}

/* 列表项 */
.rank-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1px solid #2b2b2b;
    background: #1e1e1e;
}

.rank-item:active {
    background-color: #252525;
}

/* 左侧布局 */
.item-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.rank-num {
    width: 50rpx;
    text-align: center;
    font-weight: bold;
    font-style: italic;
    margin-right: 20rpx;
    font-size: 30rpx;
    color: #888;
}

.rank-1 {
    color: #ffd700;
    font-size: 36rpx;
}

.rank-2 {
    color: #c0c0c0;
    font-size: 34rpx;
}

.rank-3 {
    color: #cd7f32;
    font-size: 32rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #333;
    margin-right: 20rpx;
}

.info {
    display: flex;
    flex-direction: column;
}

.nickname {
    font-size: 30rpx;
    font-weight: 500;
    color: #eee;
}

.tags {
    margin-top: 6rpx;
}

.tag-mvp {
    font-size: 18rpx;
    color: #ff9500;
    background: rgba(255, 149, 0, 0.1);
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
}

/* 右侧数据布局 (复用首页样式) */
.item-right {
    display: flex;
    align-items: center;
    text-align: right;
}

.stat-main {
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.stat-main .val {
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
    line-height: 1;
}

.stat-main .val.gold {
    color: #ffd700;
}

.stat-main .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

.stat-sub {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    min-width: 60rpx;
}

.stat-sub .val {
    font-size: 28rpx;
    color: #ccc;
    font-weight: 500;
    line-height: 1;
}

.stat-sub .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100rpx;
    color: #666;
    font-size: 26rpx;
}
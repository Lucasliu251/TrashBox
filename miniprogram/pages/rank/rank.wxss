/* pages/rank/rank.wxss */
page {
    background-color: #1e1e1e;
    color: #fff;
}

.container {
    padding-bottom: 40rpx;
}

/* 工具栏 */
.toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    background: transparent;
    position: sticky;
    top: 0;
    z-index: 10;
}

.date-picker-btn {
    background: #333;
    padding: 10rpx 24rpx;
    border-radius: 100rpx;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.arrow {
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #888;
}

.tips {
    font-size: 22rpx;
    color: #666;
}

/* 表头 */
.list-header {
    display: flex;
    padding: 20rpx 30rpx;
    width: 100%;
    font-size: 24rpx;
    color: #666;
    border-bottom: 1px solid #333;
}

.th-rank {
    width: 15%;
    text-align: center;
}

.th-player {
    width: 45%;
}

.th-data {
    flex: 1;
    text-align: right;
}

/* 列表项 */
.rank-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1px solid #2b2b2b;
    background: #1e1e1e;
}

.rank-item:active {
    background-color: #252525;
}

/* 左侧布局 */
.item-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.rank-num {
    width: 50rpx;
    text-align: center;
    font-weight: bold;
    font-style: italic;
    margin-right: 20rpx;
    font-size: 30rpx;
    color: #888;
}

.rank-1 {
    color: #ffd700;
    font-size: 36rpx;
}

.rank-2 {
    color: #c0c0c0;
    font-size: 34rpx;
}

.rank-3 {
    color: #cd7f32;
    font-size: 32rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #333;
    margin-right: 20rpx;
}

.info {
    display: flex;
    flex-direction: column;
}

.nickname {
    font-size: 30rpx;
    font-weight: 500;
    color: #eee;
}

.tags {
    margin-top: 6rpx;
}

.tag-mvp {
    font-size: 18rpx;
    color: #ff9500;
    background: rgba(255, 149, 0, 0.1);
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
}

/* 右侧数据布局 (复用首页样式) */
.item-right {
    display: flex;
    align-items: center;
    text-align: right;
}

.stat-main {
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.stat-main .val {
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
    line-height: 1;
}

.stat-main .val.gold {
    color: #ffd700;
}

.stat-main .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

.stat-sub {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    min-width: 60rpx;
}

.stat-sub .val {
    font-size: 28rpx;
    color: #ccc;
    font-weight: 500;
    line-height: 1;
}

.stat-sub .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100rpx;
    color: #666;
    font-size: 26rpx;
}
/* 容器背景深色 */
.container {
    background-color: #1e1e1e;
    min-height: 100vh;
    padding: 30rpx;
    color: #eee;
}

/* 头部 */
.title {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    display: block;
}

.author-info {
    display: flex;
    align-items: center;
    margin-bottom: 40rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #333;
}

.meta {
    display: flex;
    flex-direction: column;
}

.nickname {
    font-size: 30rpx;
    font-weight: 500;
}

.date {
    font-size: 24rpx;
    color: #888;
    margin-top: 6rpx;
}

/* --- 富文本核心样式 --- */
.content-body {
    font-size: 32rpx;
    line-height: 1.8;
    color: #ddd;
    padding-bottom: 40rpx;
    border-bottom: 1px solid #333;
}

/* 【重要】限制富文本内部图片的宽度 */
rich-text .rich-img {
    max-width: 100% !important;
    height: auto !important;
    border-radius: 8rpx;
    margin: 20rpx 0;
}

/* 评论区 */
.section-title {
    margin: 40rpx 0 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    border-left: 4px solid #1989fa;
    /* 蓝色竖条装饰 */
    padding-left: 20rpx;
}

.comment-item {
    display: flex;
    margin-bottom: 30rpx;
}

.c-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.c-right {
    flex: 1;
}

.c-top {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8rpx;
}

.c-nick {
    color: #888;
    font-size: 26rpx;
}

.c-time {
    color: #555;
    font-size: 22rpx;
}

.c-content {
    font-size: 28rpx;
    color: #ccc;
}

.empty-comment {
    text-align: center;
    color: #555;
    padding: 40rpx 0;
    font-size: 26rpx;
}

/* --- 底部固定栏 --- */
.footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background-color: #2a2a2a;
    /* 稍微亮一点的区别色 */
    border-top: 1px solid #333;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    z-index: 999;
}

.input-box {
    flex: 1;
    background-color: #3a3a3a;
    border-radius: 30rpx;
    padding: 10rpx 30rpx;
    margin-right: 30rpx;
}

.comment-input {
    font-size: 28rpx;
    color: #fff;
}

.action-btn {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    color: #888;
}

.action-btn .iconfont {
    font-size: 40rpx;
}

.count {
    font-size: 24rpx;
    margin-left: 6rpx;
}
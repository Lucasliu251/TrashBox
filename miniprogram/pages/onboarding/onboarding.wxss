/* pages/onboarding/onboarding.wxss */

/* 全局背景 */
page {
    background-color: #1e1e1e;
    color: #ffffff;
}

.container {
    padding: 40rpx 40rpx 180rpx 40rpx;
    /* 底部留出空间给按钮 */
    min-height: 100vh;
    box-sizing: border-box;
}

/* 头部 */
.header {
    margin-top: 40rpx;
    margin-bottom: 80rpx;
}

.title {
    font-size: 56rpx;
    font-weight: 800;
    display: block;
    margin-bottom: 20rpx;
    background: linear-gradient(90deg, #de9b35, #fff);
    /* 文字渐变效果 */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.subtitle {
    font-size: 28rpx;
    color: #8b8b8b;
    line-height: 1.6;
}

/* 表单组 */
.input-group {
    margin-bottom: 50rpx;
}

.label-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.label {
    font-size: 26rpx;
    font-weight: bold;
    color: #ccc;
    text-transform: uppercase;
    letter-spacing: 1rpx;
}

.helper-link {
    font-size: 24rpx;
    color: #de9b35;
    /* 主题橙色 */
    text-decoration: underline;
}

/* 输入框样式 */
.input-field {
    background-color: #2b2d31;
    height: 100rpx;
    border-radius: 12rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    color: #fff;
    border: 2rpx solid transparent;
    /* 预留边框位置 */
    transition: border-color 0.3s;
}

/* 这里模拟 focus 效果，实际 focus 需要 JS 控制 class，或者直接利用 CSS 伪类 */
.input-field:active {
    border-color: #5d79ae;
}

.textarea-field {
    background-color: #2b2d31;
    width: 100%;
    min-height: 100rpx;
    border-radius: 12rpx;
    padding: 30rpx;
    font-size: 32rpx;
    color: #fff;
    box-sizing: border-box;
}

.placeholder-style {
    color: #555;
    font-size: 28rpx;
}

.tip-text {
    font-size: 22rpx;
    color: #666;
    margin-top: 10rpx;
    display: block;
}

/* 底部按钮区 */
.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 40rpx;
    background: rgba(30, 30, 30, 0.95);
    /* 毛玻璃背景防遮挡 */
    box-sizing: border-box;
    z-index: 10;
}

.btn-submit {
    background-color: #444;
    /* 默认禁用色 */
    color: #888;
    border-radius: 8rpx;
    font-weight: bold;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    transition: all 0.3s;
}

/* 激活状态 */
.btn-submit.active {
    background-color: #de9b35;
    /* 激活橙色 */
    color: #fff;
    box-shadow: 0 4rpx 20rpx rgba(222, 155, 53, 0.3);
}
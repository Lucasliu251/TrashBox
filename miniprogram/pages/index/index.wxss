/* pages/index/index.wxss */

/* 全局容器 */
.container {
    min-height: 100vh;
    background-color: #1e1e1e;
    color: #fff;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

/* --- 吸顶头部容器 --- */
.sticky-header {
    position: sticky;
    top: 0;
    /* 物理贴顶 */
    z-index: 999;
    width: 70%;
    background-color: transparent;
    /* box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.5); 加一点阴影区分层次 */
}

/* 搜索区域 */
.search-section {
    /* 关键修改：上边距设为 0，彻底消除顶部空隙 */
    /* 顺序：上 右 下 左 */
    padding: 0 30rpx 20rpx 30rpx;
}

/* 胶囊搜索框 */
.search-capsule {
    background: #2b2b2b;
    height: 72rpx;
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border: 1rpx solid #333;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #fff;
    margin-left: 15rpx;
}

.ph-style {
    color: #777;
}

/* --- 下方内容区域 --- */
.content-body {
    /* 稍微给点间距，不要让轮播图顶到搜索框阴影 */
    padding-top: 20rpx;
}

/* 轮播图 */
.swiper-container {
    padding: 0 30rpx;
    margin-bottom: 40rpx;
}

.my-swiper {
    height: 340rpx;
    border-radius: 24rpx;
    overflow: hidden;
    transform: translateY(0);
}

.my-swiper-item {
    position: relative;
    border-radius: 24rpx;
}

.my-banner-image {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}

.banner-shadow {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.banner-title {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}

/* --- 通用板块 (卡片) --- */
.section {
    background: #252525;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    border-radius: 24rpx;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 30rpx;
}

.section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #fff;
}

.section-more {
    font-size: 24rpx;
    color: #888;
}

/* --- 榜单样式 --- */
.player-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1px solid #333;
}

/* 左侧信息列 */
.player-info-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.player-tags {
    margin-top: 6rpx;
}

.tag-mvp {
    font-size: 20rpx;
    color: #ff9500;
    /* 金色/橙色 */
    background: rgba(255, 149, 0, 0.1);
    padding: 2rpx 8rpx;
    border-radius: 6rpx;
    font-weight: bold;
}

.player-row:last-child {
    border-bottom: none;
}

.row-left {
    display: flex;
    align-items: center;
}

.rank-num {
    width: 40rpx;
    font-weight: bold;
    font-style: italic;
    color: #666;
    margin-right: 24rpx;
}

.rank-1 {
    color: #ffd700;
    font-size: 36rpx;
}

.rank-2 {
    color: #c0c0c0;
    font-size: 34rpx;
}

.rank-3 {
    color: #cd7f32;
    font-size: 32rpx;
}

.player-avatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 12rpx;
    margin-right: 24rpx;
    background: #333;
}

.player-name {
    font-size: 30rpx;
    font-weight: 500;
    color: #eee;
}

.row-right {
    display: flex;
    align-items: center;
    text-align: right;
}

.player-rating {
    display: block;
    font-weight: bold;
    font-size: 32rpx;
    color: #fff;
}

.player-change {
    font-size: 22rpx;
}

.up {
    color: #4caf50;
}

.down {
    color: #ff5252;
}

/* 主数据 (KD) */
.stat-main {
    margin-right: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.stat-main .val {
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
    line-height: 1;
}

.stat-main .val.gold {
    color: #ffd700;
}

.stat-main .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

/* 副数据 (ADR) */
.stat-sub {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    min-width: 60rpx;
}

.stat-sub .val {
    font-size: 28rpx;
    color: #ccc;
    font-weight: 500;
    line-height: 1;
}

.stat-sub .label {
    font-size: 20rpx;
    color: #666;
    margin-top: 4rpx;
}

/* --- 社区新闻 --- */
.news-item {
    display: flex;
    align-items: flex-start;
    /* 顶部对齐 */
    justify-content: space-between;
    /* 左右两端撑开 */
    padding: 24rpx 0;
    border-bottom: 1px solid #333;
}

.news-item:last-child {
    border-bottom: none;
}

.news-content-left {
    flex: 1;
    /* 占据剩余空间 */
    margin-right: 20rpx;
    /* 给右边图片留点空隙 */
}

.news-row-top {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
}

.news-tag {
    font-size: 20rpx;
    background: #1163cf;
    color: #ffffff;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
    flex-shrink: 0;
}

.news-title {
    font-size: 30rpx;
    color: #eee;
    font-weight: 500;
    /* 限制标题显示两行，因为有图的时候一行太短了 */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    /* 占满剩余宽度 */
}

.news-row-bottom {
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: #666;
    margin-top: 8rpx;
}

.news-info-item {
    margin-right: 20rpx;
}

/* --- 右侧：图片区域 --- */
.news-thumb {
    width: 160rpx;
    height: 120rpx;
    border-radius: 8rpx;
    background-color: #333;
    /* 图片加载失败时的底色 */
    flex-shrink: 0;
    /* 禁止图片被压缩 */
    object-fit: cover;
    /* 保证图片不变形裁切 */
}

/* 摘要样式 */
.news-desc {
    font-size: 24rpx;
    /* 字号比标题小 */
    color: #888;
    /* 灰色，低对比度 */
    margin: 8rpx 0 12rpx 0;
    /* 上下留白 */
    line-height: 1.4;
    /* 增加行高，阅读舒适 */

    /* 限制最多显示 2 行 */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

/* 悬浮按钮样式 */
.fab-btn {
    position: fixed;
    bottom: 60rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: #007aff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10rpx 20rpx rgba(0, 122, 255, 0.4);
    z-index: 1000;
}

.plus-icon {
    color: #fff;
    font-size: 60rpx;
    margin-top: -10rpx;
}
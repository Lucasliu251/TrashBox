/* pages/index/index.wxss */

/* 全局容器 */
.container {
    min-height: 100vh;
    background-color: #1e1e1e;
    color: #fff;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

/* --- 吸顶头部容器 --- */
.sticky-header {
    position: sticky;
    top: 0;
    /* 物理贴顶 */
    z-index: 999;
    width: 70%;
    background-color: transparent;
    /* box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.5); 加一点阴影区分层次 */
}

/* 搜索区域 */
.search-section {
    /* 关键修改：上边距设为 0，彻底消除顶部空隙 */
    /* 顺序：上 右 下 左 */
    padding: 0 30rpx 20rpx 30rpx;
}

/* 胶囊搜索框 */
.search-capsule {
    background: #2b2b2b;
    height: 72rpx;
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border: 1rpx solid #333;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #fff;
    margin-left: 15rpx;
}

.ph-style {
    color: #777;
}

/* --- 下方内容区域 --- */
.content-body {
    /* 稍微给点间距，不要让轮播图顶到搜索框阴影 */
    padding-top: 20rpx;
}

/* 轮播图 */
.swiper-container {
    padding: 0 30rpx;
    margin-bottom: 40rpx;
}

.my-swiper {
    height: 340rpx;
    border-radius: 24rpx;
    overflow: hidden;
    transform: translateY(0);
}

.my-swiper-item {
    position: relative;
    border-radius: 24rpx;
}

.my-banner-image {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}

.banner-shadow {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.banner-title {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}

/* --- 通用板块 (卡片) --- */
.section {
    background: #252525;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    border-radius: 24rpx;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 30rpx;
}

.section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #fff;
}

.section-more {
    font-size: 24rpx;
    color: #888;
}

/* --- 榜单样式 --- */
.player-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1px solid #333;
}

.player-row:last-child {
    border-bottom: none;
}

.row-left {
    display: flex;
    align-items: center;
}

.rank-num {
    width: 40rpx;
    font-weight: bold;
    font-style: italic;
    color: #666;
    margin-right: 24rpx;
}

.rank-1 {
    color: #ffd700;
    font-size: 36rpx;
}

.rank-2 {
    color: #c0c0c0;
    font-size: 34rpx;
}

.rank-3 {
    color: #cd7f32;
    font-size: 32rpx;
}

.player-avatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 12rpx;
    margin-right: 24rpx;
    background: #333;
}

.player-name {
    font-size: 30rpx;
    font-weight: 500;
    color: #eee;
}

.row-right {
    text-align: right;
}

.player-rating {
    display: block;
    font-weight: bold;
    font-size: 32rpx;
    color: #fff;
}

.player-change {
    font-size: 22rpx;
}

.up {
    color: #4caf50;
}

.down {
    color: #ff5252;
}

/* --- 社区新闻 --- */
.news-item {
    padding: 24rpx 0;
    border-bottom: 1px solid #333;
}

.news-item:last-child {
    border-bottom: none;
}

.news-row-top {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
}

.news-tag {
    font-size: 20rpx;
    background: #3a3a3a;
    color: #bbb;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
    flex-shrink: 0;
}

.news-title {
    font-size: 28rpx;
    color: #eee;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.news-row-bottom {
    font-size: 22rpx;
    color: #888;
}

/* 悬浮按钮样式 */
.fab-btn {
    position: fixed;
    bottom: 60rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: #007aff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10rpx 20rpx rgba(0, 122, 255, 0.4);
    z-index: 1000;
}

.plus-icon {
    color: #fff;
    font-size: 60rpx;
    margin-top: -10rpx;
}